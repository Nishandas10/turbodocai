rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only access their own data
    match /users/{userId} {
      // Allow users to create, read, and update their own profile document
      allow create, read, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Documents collection - nested structure: documents/{userId}/userDocuments/{documentId}
    match /documents/{userId}/userDocuments/{documentId} {
      // Users can only access documents in their own user folder
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Processing queue - users can only access their own tasks
    match /processing_queue/{taskId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // User analytics - users can only access their own analytics
    match /user_analytics/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Mind maps collection - nested structure: mindmaps/{userId}/userMindMaps/{mindMapId}
    match /mindmaps/{userId}/userMindMaps/{mindMapId} {
      // Create: authenticated user creating under their own userId and userId field matches
      allow create: if request.auth != null
                     && request.auth.uid == userId
                     && request.resource.data.userId == userId;
      // Read: owner only
      allow read: if request.auth != null && request.auth.uid == userId;
      // Update/Delete: owner only and stored userId matches path
      allow update, delete: if request.auth != null
                             && request.auth.uid == userId
                             && resource.data.userId == userId;
    }
  }
}