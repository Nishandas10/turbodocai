rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only access their own data
    match /users/{userId} {
      // Allow users to create, read, and update their own profile document
      allow create, read, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Documents collection - nested structure: documents/{userId}/userDocuments/{documentId}
    match /documents/{userId}/userDocuments/{documentId} {
      // Public read if isPublic == true, otherwise owner only
      allow read: if resource.data.isPublic == true || (request.auth != null && request.auth.uid == userId);
      // Writes restricted to the owner only
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Processing queue - users can only access their own tasks
    match /processing_queue/{taskId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // User analytics - users can only access their own analytics
    match /user_analytics/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Public Explore collection - top-level: /userDocuments/{docId}
    // docId can be `${ownerId}_${originalDocumentId}` or any server-generated id
    match /userDocuments/{docId} {
      // Anyone can read documents that are marked public
      allow read: if resource.data.isPublic == true;
      // Owners can create/update/delete their own entries; enforce ownership immutability
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid
        && request.resource.data.ownerId == resource.data.ownerId;
    }

    // New: allDocuments collection (primary global list)
    match /allDocuments/{docId} {
      allow read: if resource.data.isPublic == true;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid
        && request.resource.data.ownerId == resource.data.ownerId;
    }

    // Mind maps (legacy nested path - deprecated)
    match /mindmaps/{userId}/userMindMaps/{mindMapId} {
      allow read, write: if false; // disallow new writes after migration
    }

    // Mind maps top-level collection: /mindmaps/{mindMapId}
    match /mindmaps/{mindMapId} {
      // Create: authenticated user only, must set userId field = auth.uid
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Read: owner only for now (could extend to public maps later)
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Update: owner only and cannot change ownership
      allow update: if request.auth != null
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == resource.data.userId;
      // Delete: owner only
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Spaces top-level collection: /spaces/{spaceId}
    match /spaces/{spaceId} {
      // Create: authenticated user only, must set userId field = auth.uid
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Read: owner only
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Update: owner only and cannot change ownership
      allow update: if request.auth != null
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == resource.data.userId;
      // Delete: owner only
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Chats top-level collection: /chats/{chatId}
    match /chats/{chatId} {
      // Create: via Cloud Functions only (Admin). Client shouldn't create directly.
      allow create: if false;
      // Read/Update/Delete: only the owner can access their chat metadata
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // Messages subcollection: /chats/{chatId}/messages/{messageId}
      match /messages/{messageId} {
        // Messages are written by Cloud Functions (Admin). Allow client reads for owner only.
        allow read: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.userId == request.auth.uid;
        allow write: if false;
      }
    }

    // Tests nested collections:
    // Path: /tests/{userId}/spaces/{spaceId}/tests/{testId}
    match /tests/{userId}/spaces/{spaceId}/tests/{testId} {
      // Create: authenticated user only, must match path userId and set userId + spaceId correctly
      allow create: if request.auth != null
        && request.auth.uid == userId
        && request.resource.data.userId == userId
        && request.resource.data.spaceId == spaceId;

      // Read: owner only (by path userId)
      allow read: if request.auth != null && request.auth.uid == userId;

      // Update: owner only and cannot change ownership or space binding
      allow update: if request.auth != null
        && request.auth.uid == userId
        && resource.data.userId == userId
        && resource.data.spaceId == spaceId
        && request.resource.data.userId == resource.data.userId
        && request.resource.data.spaceId == resource.data.spaceId;

      // Delete: owner only
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}